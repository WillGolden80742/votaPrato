<%= form_with(model: session) do |form| %>
  <% if session.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
        <% session.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <% if @session.cliente %>
      <%= form.hidden_field 'cliente_id' %>
      <% else %>
      <p><%= form.label :cliente_id %><br />
      <%= form.collection_select(:cliente_id, @clientes, :id, :nome, :prompt => true) %></p>
      <% end %>
    </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
